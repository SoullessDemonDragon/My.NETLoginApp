@{
    ViewData["Title"] = "Login";
}
@model UserAuthCaller.DTO.UserGetByEmailDto

<div class="container">
    @if (ViewBag.ToastMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ToastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>

                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "mt-4" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="email" class="form-label mt-4"><i class="bi bi-person-circle fs-3"></i></label>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="email" name="email" required />
                                <label for="email">Email</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label mt-4"><i class="bi bi-key-fill fs-3"></i></label>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password" name="Password" required />
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4"></label>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3 text-center">
            <p>
                @Html.ActionLink("Login By User Name", "LoginByUserName", "Login", new { @class = "btn btn-link" })
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
