@model UserAuthCaller.DTO.UserDeleteDto

@{
    ViewData["Title"] = "DeleteForSure";
}

<h1>DeleteForSure</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container mt-5">
    <h2 class="text-center">Delete Password</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="DeleteUser" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="id" /> <!-- Hidden input for userId -->
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="password" /> <!-- Hidden input for userId -->
                </div>
                <div class="text-center mt-3">
                    <input type="submit" value="YES" class="btn btn-primary btn-block" />
                    <button type="button" onclick="goBack()" class="btn btn-secondary btn-block">NO</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>